@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" class="form-horizontal" role="form">
  <p>Для оформления покупки заполните следующие поля:</p>
  <div class="form-group">
    <label for="User" class="col-md-2 control-label">Название:</label>
    <div class="col-md-4">
      <input type="text" name="Name" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label for="Address" class="col-md-2 control-label">Компания:</label>
    <div class="col-md-4">
      <input type="text" name="Company" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label">Цена:</label>
    <div class="col-md-4">
      <input type="text" name="Price" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label">Аннотация:</label>
    <div class="col-md-4">
      <textarea name="Annotation" class="form-inline"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" class="btn btn-default" value="Отправить" />
    </div>
  </div>
</form>
<form method="post" asp-action="UploadFiles" asp-controller="adminPage" enctype="multipart/form-data">
  <input type="file" name="files" multiple />
  <input type="submit" value="Upload" />
</form>
